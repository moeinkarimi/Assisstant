<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/dataitems"
        android:gravity="start"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/pesoniv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight=".01"
            android:background="@drawable/circlebg"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_personmale" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/lblID"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="TextView"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="157dp" />

            <mytechcorp.ir.assisstant.TextViewPlus
                android:id="@+id/lblpersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="نام"
                android:gravity="start"
                android:textColor="@android:color/black"
                app:customFont="@string/Font" />

            <mytechcorp.ir.assisstant.TextViewPlus
                android:id="@+id/lblpersonFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="نام خانوادگی"
                android:gravity="start"
                android:textColor="@android:color/black"
                app:customFont="@string/Font" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>